<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Article" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:textColorPrimary">@color/darkTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/darkTextColorSecondary</item>
        
        <!-- Font size settings -->
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        
        <!-- Card and surface styling -->
        <item name="cardBackgroundColor">@color/darkCardBackground</item>
        <item name="android:statusBarColor">@color/darkColorPrimaryDark</item>
        
        <!-- Touch target sizes -->
        <item name="minTouchTargetSize">48dp</item>
    </style>
</resources>